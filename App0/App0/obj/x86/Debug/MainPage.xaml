<Page
    x:Class="App0.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App0"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel>
            <Button x:ConnectionId='7' Name="HamburgerButton" 
                    RelativePanel.AlignLeftWithPanel="True"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="36" 
                    Content="&#xE700;" 
                                                  />


            <TextBlock x:ConnectionId='8' Name="TitleTextBlock"
                       RelativePanel.RightOf="HamburgerButton"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="20,5,0,0"/>
            
        </RelativePanel>

        <!--
        In Windows search bar type in 'Character map' to get list of icons
        or
        https://docs.microsoft.com/en-us/windows/apps/design/style/segoe-ui-symbol-font
        -->

        <SplitView x:ConnectionId='2' Grid.Row="1" 
                   Name="MySplitView"
                   DisplayMode="CompactOverlay" 
                   OpenPaneLength="250" 
                   CompactPaneLength="56">
            <SplitView.Pane>
                <ListBox x:ConnectionId='3' SelectionMode="Single" 
                                                                    >
                    <ListBoxItem x:ConnectionId='4' Name="BLE">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE702;" />
                            <TextBlock FontSize="24" Margin="20,0,0,0">Select Device</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='5' Name="Device_Info">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="36" Text="&#xE975;" />
                            <TextBlock FontSize="24" Margin="20,0,0,0">Send &amp; Receive</TextBlock>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='6' Name="MyFrame"></Frame>
            </SplitView.Content>

        </SplitView>

    </Grid>
</Page>

